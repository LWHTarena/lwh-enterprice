<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lwhtarena.company.web.entities">
	<class name="UploadedFile" table="uploaded_file" dynamic-update="true">
		<id name="id" column="id">
			<generator class="native" />
		</id>

		<property name="url" />
		<property name="fullPath" />
		<property name="realPath" />
		<property name="nameNoExt" />
		<property name="ext" />
		<property name="size" />
		
		<property name="uploadDatetime" />
		<property name="md5" />
		<property name="remark" />
		
		<many-to-one name="user" column="uid" 	outer-join="true" class="com.lwhtarena.company.web.entities.User" />
		

	</class>
</hibernate-mapping>
